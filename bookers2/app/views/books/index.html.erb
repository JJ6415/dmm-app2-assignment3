<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render "users/user_info", user: current_user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Body</th>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <% if book.user.image.attached? %>
                  <td>
                    <%= link_to user_path(book.user.id) do %>
                      <%= image_tag book.user.image, size: "80x80" %>
                    <% end %>
                  </td>
                <% else %>
                  <td>
                    <%= link_to user_path(book.user.id) do %>
                      <%= image_tag 'no_image', size: "80x80" %>
                    <% end %>
                  </td>
                <% end %>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
