<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render "users/user_info", user: @book.user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <table class="table">
          <tbody>
            <tr>
              <td>
                <% if @book.user.image.attached? %>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= image_tag book.user.image, size: "80x80" %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= image_tag 'no_image', size: "80x80" %>
                  <% end %>
                <% end %>
                <br>
                <%= link_to @book.user.name, user_path(@book.user.id) %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if current_user.id == @book.user_id %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>