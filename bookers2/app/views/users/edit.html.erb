<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
        <label>Name</label><br>
        <%= f.text_field :name, value: @user.name %><br>
        <label>Image</label><br>
        <%= f.file_field :image, accept: "image/*" %>  <br>
        <label>Introduction</label><br>
        <%= f.text_area :info, value: @user.info %>
        <br>
        <%= f.submit 'Update User', class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>