<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
        <%= @user.errors.count %> error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
      <% end %>
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
        <label>Name</label><br>
        <%= f.text_field :name, value: @user.name %><br>
        <label>Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %>  <br>
        <label>Introduction</label><br>
        <%= f.text_area :introduction, value: @user.introduction %>
        <br>
        <%= f.submit 'Update User', class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>