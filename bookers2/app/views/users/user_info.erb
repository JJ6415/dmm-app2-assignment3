<h2>User info</h2>
<% if current_user.image.attached? %>
  <%= image_tag current_user.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image', size: "200x200" %>
<% end %>

<table>
  <tbody>
    <tr>
      <td>Name</td>
      <td>current_user.name</td>
    </tr>
    <tr>
      <td>
        introduction
      </td>
    </tr>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>